{
  "manifest_version": 3,
  "name": "GenUIChat",
  "version": "1.0",
  "description": "Experimental Generative UI for ChatGPT",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://chatgpt.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "type": "module"
    }
  ],
  "web_accessible_resources": [{
    "matches": ["*://*/*"],
    "resources": [
      "utils/cleanHtml.js",
      "generateChatCompletion.js",
      "generateHtmlOnButtonClick.js",
      "generateHtmlOnChatResponse.js",
      "getOpenAiApiKey.js",
      "loadHtml.js",
      "main.js",
      "setStatusIndicator.js"
    ]
  }]
}
